<!DOCTYPE html>
<html>
<head>
	<title>Wine Manager App</title>

	<!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

	<link rel="stylesheet" href="/css/style.css" />

	<!--jQuery-->
	<script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
</head>
<body>

<div class="container">
	<div class="margin-top-20">
		<button data-toggle="modal" data-target="#add-wine-modal" class="btn btn-primary">Add New Wine</button>
	</div>
	<% wines.forEach((wine) => { %>
		<!--One Wine-->
		<div class="row margin-top-20 wine-container">
			<div class="col-sm-3">
				<img src="<%= wine.picture %>" class="img-responsive" />
			</div>
			<div class="col-sm-9">
				<div class="margin-top-20">
					<span class="bold">Name: </span><span><%= wine.name %></span>
				</div>
				<div>
					<span class="bold">Year: </span><span><%= wine.year %></span>
				</div>
				<div>
					<span class="bold">Grapes: </span><span><%= wine.grapes %></span>
				</div>
				<div>
					<span class="bold">Country: </span><span><%= wine.country %></span>
				</div>
				<div>
					<span class="bold">Region: </span><span><%= wine.region %></span>
				</div>
				<div>
					<span class="bold">Price: </span><span><%= wine.price %></span>
				</div>
				<div>
					<span class="bold">Description: </span>
				</div>
				<div class="margin-top-10">
					<%= wine.description %>
				</div>
				<div class="margin-top-20">
					<a href="/wines/<%= wine.id %>/edit" class="btn btn-default">Edit Wine</a>
				</div>
			</div>
		</div>
		<!--/One Wine-->
	<% }); %>
</div>

<!--Add Wine Modal-->
<div id="add-wine-modal" class="modal fade">
	<div class="modal-dialog">
		<div class="modal-content">
			<form method="POST" action="/wines">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					<h4 class="modal-title">Add New Wine</h4>
				</div>
				<div class="modal-body">
					<div class="bold">
						Name
					</div>
					<div class="margin-top-20">
						<input name="wine[name]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Year
					</div>
					<div class="margin-top-20">
						<input name="wine[year]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Grapes
					</div>
					<div class="margin-top-20">
						<input name="wine[grapes]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Country
					</div>
					<div class="margin-top-20">
						<input name="wine[country]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Region
					</div>
					<div class="margin-top-20">
						<input name="wine[region]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Price
					</div>
					<div class="margin-top-20">
						<input name="wine[price]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Picture
					</div>
					<div class="margin-top-20">
						<input name="wine[picture]" type="text" class="form-control" />
					</div>
					<div class="bold margin-top-20">
						Description
					</div>
					<div class="margin-top-20">
						<textarea name="wine[description]" class="form-control"></textarea>
					</div>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
					<button type="submit" class="btn btn-primary">Save Wine</button>
				</div>
			</form>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
<!--/Add Wine Modal-->

</body>
</html>
